<maui:MauiWinUIApplication
    x:Class="ProductsList.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:maui="using:Microsoft.Maui"
    xmlns:local="using:ProductsList.WinUI">

    <maui:MauiWinUIApplication.Resources>
        <SolidColorBrush x:Key="ComboBoxItemForeground"                     Color="#101630" />
        <SolidColorBrush x:Key="ComboBoxItemForegroundPressed"              Color="#F8EFE1" />
        <SolidColorBrush x:Key="ComboBoxItemForegroundPointerOver"          Color="#F8EFE1" />
        <SolidColorBrush x:Key="ComboBoxItemForegroundSelected"             Color="#F8EFE1" />
        <SolidColorBrush x:Key="ComboBoxItemForegroundSelectedPointerOver"  Color="#F8EFE1" />
        <SolidColorBrush x:Key="ComboBoxItemBackground"                     Color="#F8EFE1" />
        <SolidColorBrush x:Key="ComboBoxItemBackgroundPointerOver"          Color="#101630" />
        <SolidColorBrush x:Key="ComboBoxItemBackgroundSelected"             Color="#101630" />
        <SolidColorBrush x:Key="ComboBoxItemBackgroundSelectedPointerOver"  Color="#101630" />
        <SolidColorBrush x:Key="ComboBoxItemBackgroundSelectedPressed"      Color="#101630" />
        <SolidColorBrush x:Key="ComboBoxItemBorderBrush"                    Color="#101630" />
        <SolidColorBrush x:Key="ComboBoxItemBorderBrushPressed"             Color="#101630" />
        <SolidColorBrush x:Key="ComboBoxItemBorderBrushPointerOver"         Color="#101630" />
        <SolidColorBrush x:Key="ComboBoxItemBorderBrushSelected"            Color="#101630" />
        <SolidColorBrush x:Key="ComboBoxBorderBrush"                        Color="#101630" />
        <SolidColorBrush x:Key="ComboBoxBorderBrushPointerOver"             Color="#101630" />
        <SolidColorBrush x:Key="ComboBoxBorderBrushPressed"                 Color="#101630" />
        <SolidColorBrush x:Key="ComboBoxItemBorderBrushSelectedPointerOver" Color="#101630" />
        <SolidColorBrush x:Key="ComboBoxBorderBrushOpened"                  Color="#F8EFE1" />
        <SolidColorBrush x:Key="ComboBoxDropDownGlyphForeground"            Color="#101630" />
        <SolidColorBrush x:Key="ComboBoxDropDownBackground"                 Color="#F8EFE1" />
        <SolidColorBrush x:Key="ComboBoxItemPillFillBrush"                  Color="#F4D70F" />

        <Thickness x:Key="TextControlBorderThemeThickness">0</Thickness>
        <Thickness x:Key="TextControlBorderThemeThicknessFocused">0</Thickness>
    </maui:MauiWinUIApplication.Resources>


</maui:MauiWinUIApplication>
